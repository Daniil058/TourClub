@using EquipmentStorageWeb.Data.Models
@using EquipmentStorageWeb.Services
@inject NavigationManager _navigationManager


<h1>Список ролей</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>название</th>
        </tr>
    </thead>
    <tbody>
        @if (roles != null)
        {
            @foreach (var role in roles)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                </tr>
            }
        }
    </tbody>
</table>

@code{
    private List<Role>? roles;
    [Inject]
    private IRoleProvider roleProvider { get; set; }
    protected override async Task OnInitializedAsync()
    {
        roles = await roleProvider.GetRoles();
    }
}
